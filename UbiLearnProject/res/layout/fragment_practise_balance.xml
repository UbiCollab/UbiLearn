<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
	
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="34dp"
        android:layout_gravity="center" >

            <TextView
                android:id="@+id/titleField"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SAMLEDE FØTTER"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <ImageView
                android:id="@+id/balance_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_action_about" />
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center" >
            
            <ImageView 
                android:id="@+id/imageField"
        		android:layout_width="wrap_content"
        		android:layout_height="150dp"
        		android:src="@drawable/samlet2" />
            
    </LinearLayout>

    

    <Button
        android:id="@+id/startStopButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Start" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxHeight="16dp"
        android:minHeight="16dp" />
	
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:orientation="horizontal" >
	    
        <TextView
	        android:id="@+id/scoreLabel1"
    	    android:layout_width="150dp"
        	android:layout_height="wrap_content"
        	android:text="Samlede føtter:"
        	android:textAppearance="?android:attr/textAppearanceMedium" />
        
        <TextView
	        android:id="@+id/score1"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="-"
	        android:textAppearance="?android:attr/textAppearanceMedium" />"
        
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:orientation="horizontal" >
	    
        <TextView
	        android:id="@+id/scoreLabel2"
    	    android:layout_width="150dp"
        	android:layout_height="wrap_content"
        	android:text="Semi-tandem:"
        	android:textAppearance="?android:attr/textAppearanceMedium" />
        
        <TextView
	        android:id="@+id/score2"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="-"
	        android:textAppearance="?android:attr/textAppearanceMedium" />
        
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:orientation="horizontal" >
	    
        <TextView
	        android:id="@+id/scoreLabel3"
    	    android:layout_width="150dp"
        	android:layout_height="wrap_content"
        	android:text="Tandem:"
        	android:textAppearance="?android:attr/textAppearanceMedium" />
        
        <TextView
	        android:id="@+id/score3"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="-"
	        android:textAppearance="?android:attr/textAppearanceMedium" />
        
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:orientation="horizontal" >
	    
        <TextView
	        android:id="@+id/scoreLabel4"
    	    android:layout_width="150dp"
        	android:layout_height="wrap_content"
        	android:text="Totalt:"
        	android:textAppearance="?android:attr/textAppearanceMedium" />
        
        <TextView
            android:id="@+id/score4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0 poeng"
            android:textAppearance="?android:attr/textAppearanceMedium" />
        
    </LinearLayout>
	
    <Button
    	android:id="@+id/next_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Neste" />

</LinearLayout>
